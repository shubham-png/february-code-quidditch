#include<bits/stdc++.h>
using namespace std;
int main()
{
    int t;
    cin>>t;
    while(t--)
    {
    int arr[3],i,sum=0;
     for(i=0;i<3;i++)
     {
         cin>>arr[i];
     }
    sort(arr,arr+3);
    if(arr[0]==arr[1]&&arr[1]==arr[2]&&arr[2]==arr[0])
    cout<<"0"<<endl;
    else if(arr[i]==arr[i+1]&&arr[2]-arr[0]==1)
    cout<<"0"<<endl;

    else
    {
        arr[0]+=1;
        arr[2]-=1;

        sum=abs(arr[1]-arr[0])+abs(arr[2]-arr[1])+abs(arr[2]-arr[0]);
        cout << sum <<endl;

    }
    }
}
